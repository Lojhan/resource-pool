{
  "name": "@lojhan/resource-pool",
  "version": "2.0.0",
  "description": "A generic resource pool implementation for Node.js written in TypeScript.",
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/Lojhan/resource-pool.git"
  },
  "license": "MIT",
  "keywords": [
    "resource pool",
    "pool"
  ],
  "files": [
    "dist/src/**/*.js",
    "dist/src/**/*.d.ts",
    "dist/src/**/*.d.ts.map"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "default": "./dist/src/index.js"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "format": "prettier . -w",
    "lint": "prettier . --check",
    "test": "tsx --test --expose-gc test/**/*.test.ts",
    "test:basic": "tsx --test test/basic/*.test.ts",
    "test:concurrency": "tsx --test test/concurrency/*.test.ts",
    "test:features": "tsx --test test/features/*.test.ts",
    "test:memory": "tsx --test --expose-gc test/memory-leak-check.test.ts"
  },
  "devDependencies": {
    "@types/node": "^25.2.2",
    "prettier": "^3.6.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.2"
  },
  "prettier": {
    "printWidth": 120,
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "always"
  }
}
